<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePaymentActivity">

    <RadioGroup
        android:id="@+id/paymentUpdateGroup"
        android:layout_width="326dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="351dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/cardNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Card Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/expiryDateEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Expiry Date"
            android:inputType="text" />

        <EditText
            android:id="@+id/securityCodeEditText"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:hint="Security Code"
            android:inputType="numberPassword" />

    </RadioGroup>

    <Button
        android:id="@+id/updatePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Proceed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </Button>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:text="Update Payment info"
        app:layout_constraintBottom_toTopOf="@+id/paymentUpdateGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>